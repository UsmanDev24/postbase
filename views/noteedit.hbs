<form class=" p-8 max-w-2xl m-auto bg-base-100 rounded-box shadow-2xl" method='POST' action='/notes/save'>
  <input type='hidden' name='docreate' value='<%=
docreate ? "create" : "update"%>'>
  <label for="notekey" class=" input text-xl  p-2 m-2 w-full "><span class=" text-secondary">Key:</span>
    {{#if docreate }}
    <input id="notekey" class=" text-lg" type='text' name='notekey' value='' />
    {{else}}
    {{#if note }}{{notekey}}{{/if}}
    <input type='hidden' name='notekey' value='{{#if note }}{{notekey}}{{/if}}' />
    {{/if}}
  </label>
  <label class="input text-xl p-2 m-2 w-full"><span class=" text-secondary">Title:</span>
     <input class="text-lg"
      type='text' name='title' value='{{#if note }}{{note.title}}{{/if}}' />
  </label>
  <br />
  <textarea class="  textarea caret-accent text-[1.05rem] m-2 p-4 w-full" rows=5 name='body'>
{{#if note }}{{note.body}}{{/if}}</textarea>
  <br />
  <div class=" w-max m-auto">
    <input class=" btn btn-primary m-2" type='submit' value='Submit' />
  </div>
  
</form>