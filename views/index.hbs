<div class="max-w-4xl w-full mx-auto p-4 md:p-6">
  {{#if homepage}} 
  
  {{else}} 
  <h1 class=" text-2xl py-4"><span class=" text-[0.9rem]">Category:</span>  {{catgName}}</h1>
  <p class=" pb-2 text-sm">Total Results : {{total}}</p>
  {{/if}}
  {{#if postlist}}
  
   <h2 class=" text-2xl font-bold p-6 text-center">Latest Posts</h2>
  <div id="postlist" class="flex flex-col gap-6">
    {{#each postlist}}

    <div id="{{key}}" class="card  shadow-xl border border-base-300 transition-all hover:shadow-2xl">
      <div class="card-body p-6">

        <div class="flex  items-center justify-between mb-2">
          <div class="flex flex-wrap items-center gap-3">
            <div class="avatar placeholder">
              <div class="">
                <img class="bg-purple-300 rounded-full dark:bg-neutral w-10 h-10"
                  src="/assets/users/photo/{{auther.username}}">
              </div>
            </div>
            <div class="flex flex-col">
              <span class="font-bold text-base">{{auther.username}}</span>
              <span id="" class="updatedAt text-xs text-base-content/60">{{updatedAt}}</span>
            </div>
            <div class=" inline-flex gap-1">
            {{#each catgs}}
            <a class=" text-[0.8rem] rounded-2xl p-1 px-2 bg-base-200 text-info hover:bg-accent-content" href="/explore/{{catgName}}">{{catgName}}</a>
            {{/each}}
          </div>
          </div>
          <span id="{{key}}-info" class="badge badge-ghost badge-sm"></span>
        </div>

        <a id="{{key}}-link" href="/posts/view?key={{key}}" class=" group block space-y-2">
          <h2 id="{{key}}-title" class="card-title text-2xl text-primary/80 transition-colors line-clamp-2">
            {{title}}
          </h2>
          <div id="{{key}}-body" class=" prose  line-clamp-3">
            {{{body}}}
          </div>
        </a>

        <div class="card-actions justify-between items-center mt-4 pt-4 border-t border-base-200">
          <div class="flex gap-4">
            <button data-postkey="{{key}}" class="like-btn btn btn-ghost btn-sm gap-2 text-success">

              <span id="{{key}}-likes">{{_count.likes}}</span>
              <span id="{{key}}-likeLogo" data-feather="thumbs-up" class=" transition-colors duration-200 h-4 w-4"></span>
              <span hidden class=" btn-active fill-primary"></span>
            </button>
            <button disabled class="comment-btn btn btn-ghost btn-sm gap-2 text-info">
              <span id="{{key}}-comments">{{_count.comments}}</span>
              <span data-feather="message-circle" class=" h-4 w-4"></span>

            </button>
          </div>
        </div>
      </div>
    </div>

    {{/each}}
  </div>
  
  {{else}}
  <div id="postlist" class="flex flex-col gap-6"></div>
  <div id="emptydiv" class="text-center py-20">
    <h1 class="text-3xl font-bold mb-4 opacity-70">No posts Added Yet</h1>
    <a class="btn btn-primary btn-wide" href="/posts/add">Create First post</a>
  </div>
  {{/if}}
  {{#if homepage}} 
