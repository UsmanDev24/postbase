<div class=" p-8 max-w-2xl m-auto bg-base-100 rounded-box shadow-2xl">
  {{#if note}}<h3 class=" text-xl p-2">{{note.title}}</h3>{{/if}}
  {{#if note}}<p class=" p-2 bg-base-200 shadow-lg rounded-md">{{ note.body }}</p> {{/if}}
  <p class=" p-2 ">Key: {{ notekey }}</p>
  {{#if notekey }}
  <hr>
  <p class=" p-4 "><a class=" btn btn-warning" href="/notes/destroy?key={{notekey}}">Delete</a>
    <a class=" pl-2 btn btn-secondary" href="/notes/edit?key={{notekey}}">Edit</a>
  </p>
  {{/if}}
</div>